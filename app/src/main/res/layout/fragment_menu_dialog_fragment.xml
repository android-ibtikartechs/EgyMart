<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlue"
        android:alpha="0.8"
        android:layout_marginTop="100dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_btn"
                />

            <ImageView
                android:id="@+id/btn_login_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile_btn"
                />


            <ImageView
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_btn"
                />

            <ImageView
                android:id="@+id/btn_offers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_offers_btn"
                />

            <ImageView
                android:id="@+id/btnCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_categories_btn"
                />

            <ImageView
                android:id="@+id/btn_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_btn_exit"
                />

        </LinearLayout>


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>